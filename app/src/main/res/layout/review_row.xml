<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="160dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:weightSum="1">
                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/ivReviewProfile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
android:layout_weight="0.1"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg"
                    app:siBorderColor="@color/green_700"
                    app:siBorderWidth="1dp"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tvRevName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:textAppearance="@style/SubTitleText"
                        tools:text="Suraj"/>

                    <TextView
                        android:id="@+id/tvRevDate"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textAppearance="@style/normalText"
                        tools:text="24/08/2008"
                        android:textColor="@color/grey_700"
                        android:layout_weight="0.4"/>

                </LinearLayout>

                <RatingBar
                    android:id="@+id/ctrReviewRatingbar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"
                    android:focusable="true"
                    android:foregroundTint="@color/icon_color"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="@color/icon_color"
                    android:rating="3"/>
                <TextView
                    android:id="@+id/tvRatCount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/normalText"
                    tools:text="5"

                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/icon_color"
                    android:layout_weight="0.1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:weightSum="1">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.17"


                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tvRevDesc"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textAppearance="@style/normalText"
                        tools:text="Suraj"/>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.16"
                android:weightSum="1">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.13"


                    />
                <TextView
                    android:id="@+id/tvLikes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:drawableLeft="@drawable/like_icon"
                    android:drawableTint="@color/icon_color"
                    android:text="200 likes"
                    android:gravity="center_vertical"
                    android:textColor="@color/icon_color"
                    android:textAppearance="@style/SmallText"
                    android:drawablePadding="10dp"
                    />

                <TextView
                    android:id="@+id/tvHelp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:drawableLeft="@drawable/smile_icon"
                    android:drawableTint="@color/icon_color"
                    android:text="1200 helpful"
                    android:textColor="@color/icon_color"
                    android:textAppearance="@style/SmallText"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>